<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/popup_window_drawable"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="casual"
        android:textAlignment="center"
        android:textColor="@color/colorDarkPurple"
        android:textSize="18sp"
        android:textStyle="bold|italic"

        android:text="Enter name of subject" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"

            android:fontFamily="casual"
            android:textAlignment="center"
            android:textColor="@color/colorDarkPurple"
            android:textSize="18sp"
            android:textStyle="bold|italic"

            android:text="Choose color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="1dp">

            <Button
                android:id="@+id/button_red"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@android:color/holo_red_dark"
                android:onClick="choseColor"
                android:shadowColor="#00000000"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <Button
                android:id="@+id/button_yellow"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@android:color/holo_orange_light"
                android:onClick="choseColor"
                android:shadowColor="#00000000"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <Button
                android:id="@+id/button_green"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@android:color/holo_green_light"
                android:onClick="choseColor"
                android:shadowColor="#00000000"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <Button
                android:id="@+id/button_blue"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@android:color/holo_blue_dark"
                android:onClick="choseColor"
                android:shadowColor="#00000000"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <Button
                android:id="@+id/button_purple"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@android:color/holo_purple"
                android:onClick="choseColor"
                android:shadowColor="#00000000"
                android:shadowDy="1"
                android:shadowRadius="1" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameGetter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="casual"

            android:hint="Name of subject" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_drawable"

        android:layout_marginTop="5dp"

        android:fontFamily="casual"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="18sp"
        android:typeface="normal"

        android:text="Add" />


</LinearLayout>